<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroung"
    tools:context=".ProductDetailsActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <androidx.cardview.widget.CardView
               android:id="@+id/btnGoBackAllProducts"
               android:layout_width="60dp"
               android:layout_height="60dp"
               app:cardBackgroundColor="#FFE8BE"
               app:cardCornerRadius="20dp"
               android:layout_marginStart="26dp"
               android:layout_marginTop="20dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" >

               <com.airbnb.lottie.LottieAnimationView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:lottie_autoPlay="true"
                   android:layout_marginEnd="2dp"
                   app:lottie_rawRes="@raw/arrowleftback_animation" />

           </androidx.cardview.widget.CardView>

           <!-- Cart Info -->
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="70dp"
               android:layout_height="70dp"
               android:layout_marginEnd="20dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <androidx.cardview.widget.CardView
                   android:id="@+id/infoCartSize"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   app:cardBackgroundColor="#FFC75A"
                   app:cardCornerRadius="50dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginTop="8dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent">

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <TextView
                           android:id="@+id/txtCartSize"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="10"
                           android:textColor="#fff"
                           android:textSize="18sp"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           tools:ignore="HardcodedText" />

                   </androidx.constraintlayout.widget.ConstraintLayout>

               </androidx.cardview.widget.CardView>

               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/shoppingcart"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   tools:ignore="ContentDescription" />

           </androidx.constraintlayout.widget.ConstraintLayout>

           <!-- Text Category -->
           <TextView
               android:id="@+id/txtCategory_Prod_Desc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/category"
               android:textColor="#3F3F3F"
               android:textSize="25sp"
               android:layout_marginTop="20dp"
               android:layout_marginStart="60dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/btnGoBackAllProducts" />

           <!-- Card Product -->
           <androidx.cardview.widget.CardView
               android:id="@+id/CardProductsDesc"
               android:layout_width="277dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="21dp"
               app:cardBackgroundColor="#FFE1A7"
               app:cardCornerRadius="30dp"
               android:visibility="visible"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txtCategory_Prod_Desc">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <ImageView
                       android:id="@+id/ImgProd_Desc"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:maxHeight="220dp"
                       android:scaleType="center"
                       android:src="@drawable/img_frappuccinounicornio"
                       app:layout_constraintBottom_toTopOf="@+id/cardView"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       tools:ignore="ContentDescription" />


                   <androidx.cardview.widget.CardView
                       android:id="@+id/cardView"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:maxHeight="200dp"
                       app:cardBackgroundColor="#FFF2D9"
                       app:cardCornerRadius="30dp"
                       app:layout_constraintBottom_toBottomOf="parent">

                       <androidx.constraintlayout.widget.ConstraintLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <TextView
                               android:id="@+id/nm_prod_Desc"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginStart="18dp"
                               android:layout_marginTop="22sp"
                               android:maxWidth="240dp"
                               android:text="@string/mochafrappuccino"
                               android:textColor="#000"
                               android:textSize="20sp"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toTopOf="parent" />

                           <!--Text Size-->
                           <TextView
                               android:id="@+id/txtSize_ProductDesc"
                               android:layout_width="180dp"
                               android:layout_height="wrap_content"
                               android:layout_marginStart="18dp"
                               android:layout_marginTop="9dp"
                               android:text="@string/proprietario"
                               android:textAlignment="textStart"
                               android:textColor="#3F3F3F"
                               android:textSize="16sp"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toBottomOf="@+id/nm_prod_Desc" />

                           <TextView
                               android:id="@+id/price_prod_Desc"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginStart="20dp"
                               android:layout_marginTop="10dp"
                               android:layout_marginBottom="20dp"
                               android:text="@string/price"
                               android:textColor="#202020"
                               android:textSize="20sp"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toStartOf="parent"
                               app:layout_constraintTop_toBottomOf="@+id/txtSize_ProductDesc" />

                           <androidx.cardview.widget.CardView
                               android:id="@+id/btnLessQT_Prod"
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:layout_marginStart="30dp"
                               android:layout_marginTop="10dp"
                               android:layout_marginBottom="20dp"
                               app:cardBackgroundColor="#FFDA91"
                               app:cardCornerRadius="50dp"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toEndOf="@+id/price_prod_Desc"
                               app:layout_constraintTop_toBottomOf="@+id/txtSize_ProductDesc">

                               <androidx.constraintlayout.widget.ConstraintLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginBottom="3dp"
                                       android:text="@string/less"
                                       android:textAlignment="center"
                                       android:textColor="#000"
                                       android:textSize="20sp"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       tools:ignore="TooDeepLayout" />

                               </androidx.constraintlayout.widget.ConstraintLayout>

                           </androidx.cardview.widget.CardView>

                           <TextView
                               android:id="@+id/txtQt_prod"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="10dp"
                               android:layout_marginBottom="20dp"
                               android:text="10"
                               android:textColor="#000"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintEnd_toStartOf="@+id/btnPlusQT_Prod"
                               app:layout_constraintStart_toEndOf="@+id/btnLessQT_Prod"
                               app:layout_constraintTop_toBottomOf="@+id/txtSize_ProductDesc"
                               tools:ignore="HardcodedText" />

                           <androidx.cardview.widget.CardView
                               android:id="@+id/btnPlusQT_Prod"
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:layout_marginTop="10dp"
                               android:layout_marginEnd="20dp"
                               android:layout_marginBottom="20dp"
                               app:cardBackgroundColor="#FFDA91"
                               app:cardCornerRadius="50dp"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintEnd_toEndOf="parent"
                               app:layout_constraintTop_toBottomOf="@+id/txtSize_ProductDesc">

                               <androidx.constraintlayout.widget.ConstraintLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="@string/plus"
                                       android:textAlignment="center"
                                       android:textColor="#000"
                                       android:textSize="20sp"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent" />

                               </androidx.constraintlayout.widget.ConstraintLayout>


                           </androidx.cardview.widget.CardView>

                       </androidx.constraintlayout.widget.ConstraintLayout>

                   </androidx.cardview.widget.CardView>


               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>

           <!-- Card Btn add to cart -->
           <androidx.cardview.widget.CardView
               android:id="@+id/BtnAddToCart"
               android:layout_width="250dp"
               android:layout_height="50dp"
               android:visibility="visible"
               android:layout_marginTop="20dp"
               app:cardBackgroundColor="#FFC75A"
               app:cardCornerRadius="20dp"
               android:layout_marginBottom="20dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/CardProductsDesc">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/addtoshoppingcart"
                       android:textColor="#000"
                       android:textSize="20sp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>

       </androidx.constraintlayout.widget.ConstraintLayout>

   </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>